<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.AppCompat.Toolbar.Button.Navigation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="prateekjain.classroombollywood.GuessTheMovie">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"></include>
    <TextView
        android:id="@+id/movie1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_above="@+id/textView3"
        android:background="@color/primary"
        android:padding="5dp"
        android:textColor="@color/primary_text"
        android:typeface="sans"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text=""
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/textView3"
                style="@style/AlertDialog.AppCompat.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView4"
                android:layout_alignLeft="@+id/textView4"
                android:layout_gravity="center_vertical|left"
                android:text="BOLLYWOOD"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/bollywood"
                style="@style/AlertDialog.AppCompat.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/abc_action_bar_content_inset_material"
                android:paddingLeft="85dp"
                android:text=""
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                style="@style/AlertDialog.AppCompat.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:text="CHARACTER USED"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/charused"
                style="@style/AlertDialog.AppCompat.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="60dp"
                android:text=""
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/textView"
                style="@style/AlertDialog.AppCompat.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="16dp"
                android:text="Enter Character"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/enterchar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="1"
                android:paddingRight="16dp" />

            <Button
                android:id="@+id/enter"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/clear_icon" />
        </LinearLayout>


            <!--<com.andexert.library.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/more1"
                rv_centered="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="5dp"
                app:rv_color="#B71C1C">

                <Button
                    android:id="@+id/reset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FF5252"
                    android:elegantTextHeight="false"
                    android:elevation="20dp"
                    android:shadowRadius="@android:integer/config_longAnimTime"
                    android:text="I QUIT"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </com.andexert.library.RippleView>-->

            <prateekjain.classroombollywood.CounterPack.CircularCounter xmlns:meter="http://schemas.android.com/apk/res-auto"
                android:id="@+id/meter"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                meter:metricSize="25sp"
                meter:metricText="seconds"
                meter:range="60"
                meter:textColor="#FF5252"
                meter:textSize="27sp" />
    </LinearLayout>


</LinearLayout>
